<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salangsang.romeo.convertertemp.TempConverterActivity"
    tools:showIn="@layout/activity_temp_converter">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"/>


    <TextView
        android:id="@+id/Degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degrees"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/resetButton" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:text="RESET"
        android:layout_below="@+id/celsiusLabel"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/fahrenheitIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Degree"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:layout_toEndOf="@+id/FahrenheitLabel"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/FahrenheitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fahrenheitIN"
        android:layout_toStartOf="@+id/resetButton"
        android:text="Fahrenheit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/celsiusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/Degree" />

    <TextView
        android:id="@+id/CelsiusConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/FahrenheitLabel"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="Celsius"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
